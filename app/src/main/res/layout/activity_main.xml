<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:context=".ui.MainActivity">

    <com.morovez.sketchalive.ui.views.MainPanelView
        android:id="@+id/mainPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.morovez.sketchalive.ui.views.CanvasView
        android:id="@+id/canvasView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/canvas"
        app:layout_constraintBottom_toTopOf="@+id/instruments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainPanel"
        app:layout_constraintVertical_bias="1.0" />

    <com.morovez.sketchalive.ui.views.LayersListTopPanelView
        android:id="@+id/layersTopPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/animationSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        android:stepSize="1.0"
        android:valueFrom="1.0"
        android:valueTo="3.0"
        android:visibility="invisible"
        app:labelBehavior="withinBounds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:thumbColor="@color/white"
        app:thumbHeight="16dp"
        app:thumbStrokeColor="@color/white"
        app:trackColor="@color/green"
        app:trackColorActive="@color/green"
        app:trackColorInactive="@color/green"
        app:trackHeight="4dp"
        tools:visibility="visible" />

    <com.morovez.sketchalive.ui.views.InstrumentsPanelView
        android:id="@+id/instruments"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.morovez.sketchalive.ui.views.LayersListBottomPanelView
        android:id="@+id/layersBottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/gifLoader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/preparing_gif_loader"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <com.morovez.sketchalive.ui.views.CustomLoaderView
            android:id="@+id/loaderView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:dots_color="@color/white"
            app:dots_margin="4dp"
            app:dots_size="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>